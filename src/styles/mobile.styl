@media screen and (min-width: 320px) {
  :root {
    /* fonts */
    /* weight */
    --logo: 500 14px / 19px Montserrat;
    --font-h1: 700 40px / 48px Montserrat;
    --font-h2: 700 18px / 22px Montserrat;
    --font-btn: 700 12px / 14px Montserrat;
    --font-h3: 500 12px / 14px Montserrat;
    --font-h4-tags: 600 10px / 14px Montserrat;
    --font-p: 500 18px / 22px Montserrat;
    --font-small: 500 10px / 12px Montserrat;
    // margins
    --margin-hero: 24px 0;
    --marg-log-r: 8px;
    --marg-log-b: 8px;
    --marg-H2-Bottom: 18px;
    --marg-section-t: 18px;
    --marg-section-b: cal(18px * 3);
    --marg-h2-post-t: 18px;
    --marg-h2-post-b: cal(18px * 2);
    /* -Colors */
    --background: #E3E1DC;
    --black: #050709;
    --gray: #bababa;
    --off-white: #faf8f7;
    --just-white: #ffffff;
    /* -Spacing */
    --Space1b: 1rem;
    --Space2b: 1rem 2rem;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    display: grid;
    justify-content: center;
    background-color: #f2f2f2;
    padding: 0 18px;
  }

  .layout {
    display: grid;
    padding: 0 18px;
    background: #FFFFFF;
  }

  .logo {
    width: 127px;
    height: 43px;
    background: aqua;
    margin-top: 12px;
    margin-bottom: 24px;
  }

  .baner {
    padding-top: 21px;
    background-color: cyan;
    display: grid;
    grid-auto-flow: column;
    grid-template-columns: 135px 1fr;
    border-radius: 42px 42px 0 0;
    border: 1px solid;
    font: var(--font-small);
  }

  .baner p {
    font: var(--font-small);
  }

  .baner {
    padding-top: 21px;
    padding-left: 29px;
  }

  .baner > div:nth-child(1) > figure:nth-child(1) {
    margin-bottom: 8px;
  }

  .baner button {
    margin: 18px 0;
    margin-bottom: 25px;
    margin-top: 18px;
    width: 92px;
    height: 30px;
    border-radius: 59px;
    border: unset;
    font: var(--font-h3);
    display: flex;
    justify-content: center;
    align-items: center;
    grid-gap: 12px;
  }

  .galery {
    padding: 0 29px;
    padding-top: 21px;
    border-radius: 0 0 40px 40px;
    background-color: antiquewhite;
  }

  .galery h3 {
    margin-bottom: 6px;
  }

  .galery_img {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 13px;
    border-radius: 12px;
    padding-bottom: 54px;
  }

  .galery_img figure {
    height: 78.7px;
    background: aliceblue;
    border-radius: 12px;
  }

  .galery h3 {
    font: var(--font-h3);
  }

  .galery hr {
    height: 3px;
    width: 33px;
    background: black;
    border: black;
    border-radius: 12px;
  }

  .galery h2 {
    font: var(--font-h2);
    margin-top: 17px;
    margin-bottom: 26px;
  }

  .galery_img p {
    font: var(--font-h4-tags);
    margin-top: 6px;
    margin-left: 1px;
  }

  .row1 > hr:nth-child(1) {
    height: 3px;
    width: 50px;
    background: #000;
    border: #000;
    border-radius: 12px;
    margin-top: 63px;
  }

  .row1 > h2:nth-child(2) {
    font-size: 36px;
  }

  .row1 {
    display: grid;
  }

  .hero {
    // max-width: 339px;
    max-width: 320px;
    padding: 9px 22px;
  }

  .baner button {
    font: var(--font-h3);
  }

  .baner img {
    font: var(--logo);
  }

  .row1 h2 {
    font: var(--font-h1);
    font-size: 36px;
    margin-top: 18px;
    margin-bottom: 20px;
  }

  .row1 p {
    font: 500 14px / 21px Montserrat;
  }

  .link {
    font: var(--font-small);
    justify-self: start;
    font: 700 12px / 14px Montserrat;
    margin-top: 27px;
    color: rgba(41, 21, 7, 0.6);
    margin-bottom: 64px;
    border: unset;
    background: unset;
  }

  .cats figure {
    grid-template-rows: masonry;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 16px;
    margin-bottom: 22px;
  }

  .cats > figure:nth-child(1) > img:nth-child(1) {
    height: 105.09px;
    background: antiquewhite;
  }

  .cats > figure:nth-child(1) > img:nth-child(2) {
    height: 242.69px;
    background: #0ff;
  }

  .cats > figure:nth-child(1) > img:nth-child(3) {
    height: 184.43px;
    background: #f0ffff;
  }

  .layout > div:nth-child(3) {
    max-width: 339px;
    padding: 0 29px;
    /* padding-top: 0px; */
    padding-top: 17px;
    border-radius: 40px 40px 0 0;
    background-color: #000;
    height: 108px;
    color: white;
  }

  .footer figure {
    font: var(--logo);
  }

  .footer p {
    font: 400 14px / 19px Montserrat;
    margin-top: 23px;
  }
}
