@media screen and (min-width: 375px) {
  :root {
    /* fonts */
    --f-link: 600 12px / 14px Monserrat;
    /* weight */
    --logo: 500 14px / 19px Montserrat;
    --font-h1: 700 40px / 48px Montserrat;
    --font-h2: 700 18px / 22px Montserrat;
    --font-btn: 700 12px / 14px Montserrat;
    --font-h3: 500 12px / 14px Montserrat;
    --font-h4-tags: 600 10px / 14px Montserrat;
    --font-p: 500 18px / 22px Montserrat;
    --font-small: 500 10px / 12px Montserrat;
    // margins
    --margin-hero: 24px 0;
    --marg-log-r: 8px;
    --marg-log-b: 8px;
    --marg-H2-Bottom: 18px;
    --marg-section-t: 18px;
    --marg-section-b: cal(18px * 3);
    --marg-h2-post-t: 18px;
    --marg-h2-post-b: cal(18px * 2);
    /* -Colors */
    --background: #E3E1DC;
    --black: #050709;
    --gray: #bababa;
    --off-white: #faf8f7;
    --just-white: #ffffff;
    /* -Spacing */
    --Space1b: 1rem;
    --Space2b: 1rem 2rem;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    display: grid;
    justify-content: center;
    padding: 0 18px;
    background: #fff;
  }

  .layout {
    display: grid;
    background: #FFFFFF;
  }

  .logo {
    width: 127px;
    height: 43px;
    margin-top: 12px;
    margin-bottom: 24px;
  }

  .baner {
    display: grid;
    color: black;
    background-color: black;
    overflow: hidden;
    grid-template-rows: 1fr;
    grid-template-columns: 1fr;
    grid-template-areas: 'stack';
    font: var(--font-small);
    border-radius: 40px 40px 0 0;

    & div {
      color: white;
      grid-area: stack;
      padding-left: 9%;
    }

    & figure {
      grid-area: stack;
      order: -1;
      fill: white;
    }

    & img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: right;
    }
  }

  .baner__figure {
    width: 46px;
    padding-top: 21px;

    & svg {
      width: 100%;
    }
  }

  .baner p {
    font: var(--font-small);
    width: 140px;
  }

  // .baner {
  // padding-top: 21px;
  // padding-left: 29px;
  // }

  // .baner > div:nth-child(1) > figure:nth-child(1) {
  // margin-bottom: 8px;
  // }
  .baner button {
    margin: 18px 0;
    margin-bottom: 25px;
    margin-top: 18px;
    width: 92px;
    height: 30px;
    border-radius: 59px;
    border: unset;
    font: var(--font-h3);
    display: flex;
    justify-content: center;
    align-items: center;
    grid-gap: 12px;
  }

  .galery {
    padding: 0 29px;
    padding-top: 21px;
    border-radius: 0 0 40px 40px;
    background-color: antiquewhite;
  }

  .galery a {
    font: var(--f-link);
    text-decoration: none;
    color: #291507;
  }

  .galery h3 {
    margin-bottom: 6px;
  }

  .galery_img {
    display: grid;
    grid: '1fr 1fr';
    grid-gap: 13px;
    justify-content: center;
    grid-template-rows: 1fr 1fr;
    padding-bottom: 55px;
  }

  .galery_img figure {
    background: aliceblue;
    border-radius: 12px;
    width: 135px;
    height: 135px;
    overflow: hidden;
  }

  .Breed img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .galery h3 {
    font: var(--font-h3);
  }

  .galery hr {
    height: 3px;
    width: 33px;
    background: black;
    border: black;
    border-radius: 12px;
  }

  .galery h2 {
    font: var(--font-h2);
    margin-top: 17px;
    margin-bottom: 26px;
  }

  .galery_img p {
    font: var(--font-h4-tags);
    margin-top: 6px;
    margin-left: 1px;
  }

  .row1 > hr:nth-child(1) {
    height: 3px;
    width: 50px;
    background: #000;
    border: #000;
    border-radius: 12px;
    margin-top: 63px;
  }

  .row1 > h2:nth-child(2) {
    font-size: 36px;
  }

  .row1 {
    display: grid;

    & button {
      display: unset;
      margin-bottom: unset;
    }
  }

  // .hero {
  // // max-width: 339px;
  // padding: 9px 22px;
  // }
  .baner button {
    font: var(--font-h3);
  }

  .baner img {
    font: var(--logo);
  }

  .row1 h2 {
    font: var(--font-h1);
    font-size: 36px;
    margin-top: 18px;
    margin-bottom: 20px;
  }

  .row1 p {
    font: 500 14px / 21px Montserrat;
  }

  .link {
    font: var(--font-small);
    justify-self: start;
    font: 700 12px / 14px Montserrat;
    margin-top: 27px;
    color: rgba(41, 21, 7, 0.6);
    margin-bottom: 64px;
    border: unset;
    background: unset;
    display: none;
  }

  .cats {
    display: grid;
    grid-template-columns: auto 1fr;
    grid-gap: 16px;
  }

  .cats > figure:nth-child(1) {
    grid-gap: 27px;
    grid-template-columns: unset;
  }

  .cat__1 {
    width: 172.03px;
    border-radius: 24px;
    height: 105.09px;
    background: antiquewhite;
  }

  .cat__2 {
    border-radius: 24px;
    width: 122.95px;
    height: 184.43px;
    justify-self: right;
  }

  .cat__3 {
    width: 149.98px;
    height: 242.69px;
    border-radius: 24px;

    & img {
      width: auto;
      height: 100%;
      object-fit: cover;
    }
  }

  .row1 {
    margin-bottom: 65px;
  }

  .cats figure {
    grid-template-rows: masonry;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 16px;
    margin-bottom: 22px;
  }

  .cats > figure:nth-child(1) > img:nth-child(3) {
    height: 184.43px;
    background: #f0ffff;
  }

  .layout footer {
    align-items: center;
    padding: 0 29px;
    /* padding-top: 0px; */
    padding-top: 17px;
    border-radius: 40px 40px 0 0;
    background-color: #000;
    height: 108px;
    color: white;
  }

  .footer figure {
    font: var(--logo);
  }

  .footer svg {
    fill: white;
    width: 70px;
  }

  .footer p {
    font: 400 12px / 14px Montserrat;

    & svg {
      width: 70px;
      height: fit-content;
    }
  }
}
